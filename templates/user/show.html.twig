{% extends 'base.html.twig' %}

{% block title %}{% trans from "translate" %}user{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans from "translate" %}user{% endtrans %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{% trans from "translate" %}id{% endtrans %}</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                    {% for role in user.roles %}
                        <ul> 
                            <li> {{ role }} </li>
                        </ul>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>{% trans from "translate" %}first_name{% endtrans %}</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>{% trans from "translate" %}last_name{% endtrans %}</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>{% trans from "translate" %}is_verified{% endtrans %}</th>
                <td>
                    {% if user.isVerified %} 
                        {% trans from "translate" %}yes{% endtrans %} 
                    {% else %} 
                        {% trans from "translate" %}no{% endtrans %} 
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">{% trans from "translate" %}back_to_list{% endtrans %}</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">{% trans from "translate" %}edit{% endtrans %}</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
